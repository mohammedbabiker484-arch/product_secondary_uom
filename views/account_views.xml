<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Extends the Invoicing/Bills form to display secondary quantities.
        Inherits 'account.view_move_form' and adds fields to the 'invoice_line_ids' list.
    -->
    <record id="view_move_form_secondary_uom" model="ir.ui.view">
        <field name="name">account.move.form.secondary.uom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Position secondary fields after primary UoM field. -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_uom_id']" position="after">
                <field name="secondary_quantity" optional="hide"/>
                <field name="secondary_uom_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
